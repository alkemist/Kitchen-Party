/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/app",
    "types": [
      "@angular/localize"
    ],
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@components": [
        "src/app/components"
      ],
      "@consts": [
        "src/app/consts"
      ],
      "@converters": [
        "src/app/converters"
      ],
      "@enums": [
        "src/app/enums"
      ],
      "@errors": [
        "src/app/errors"
      ],
      "@guards": [
        "src/app/guards"
      ],
      "@handlers": [
        "src/app/handlers"
      ],
      "@interfaces": [
        "src/app/interfaces"
      ],
      "@mocks": [
        "src/app/mocks"
      ],
      "@models": [
        "src/app/models"
      ],
      "@modules": [
        "src/app/modules"
      ],
      "@pipes": [
        "src/app/pipes"
      ],
      "@resolvers": [
        "src/app/resolvers"
      ],
      "@services": [
        "src/app/services"
      ],
      "@stores": [
        "src/app/stores"
      ],
      "@tools": [
        "src/app/tools"
      ],
      "@validators": [
        "src/app/validators"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
